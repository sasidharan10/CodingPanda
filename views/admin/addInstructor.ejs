<% layout('./layouts/adminLayout') -%>

<link rel="stylesheet" href="../../static/css/admin/styleInstructor.css">
<title>Add Instructor</title>

<section id="instructorIntroSection">
    <div class="d-flex flex-row justify-content-center w-100 mt-3">
        <% if(success && success.length){%>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%=success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%>
        <% if(error && error.length){%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%=error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%>
    </div>
    <div class="instructorTitle">
        <h1>Add Instructor</h1>
    </div>
    <form class="registerForm col-xl-3 col-lg-4 col-md-6 col-sm-8 col-10 validated-form" action="/addInstructor"
        method="post" novalidate>
        <div class="form-group mb-3">
            <label for="firstName" class="mb-2">Instructor Name</label>
            <input type="text" class="form-control" placeholder="First name" id="instructorName" name="instructorName"
                required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter valid Instructor Name.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="email" class="mb-2">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email"
                name="email" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter valid E-mail.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="instructorTitle" class="mb-2">Title</label>
            <input type="text" class="form-control" placeholder="Title" id="instructorTitle" name="instructorTitle"
                required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter valid Instructor Title.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="description" class="mb-2">Description</label>
            <textarea type="text" class="form-control" placeholder="Description ( 30 - 50 words)" id="description"
                name="description" required></textarea>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter valid Description.
            </div>
        </div>
        <div class="d-flex flex-row justify-content-center w-100 mb-3">
            <button type="submit" class="btn btn-success mx-2 my-2 w-50">Submit</button>
        </div>

    </form>

</section>