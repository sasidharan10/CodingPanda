<% layout('./layouts/adminLayout') -%>

<link rel="stylesheet" href="../static/css/styleLogin.css">
<title>Admin Login</title>

<section id="loginIntroSection">
    <% if(success && success.length){%>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%=success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% }%>
    <% if(error && error.length){%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%=error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% }%>
    <div class="loginTitle">
        <h1>Admin Login</h1>
    </div>
    <form class="loginForm col-xl-3 col-lg-4 col-md-6 col-sm-8 col-10 validated-form" action="/adminLogin" method="POST"
        novalidate>
        <div class="form-group mb-3">
            <label for="username" class="mb-2">Username</label>
            <input type="text" class="form-control" id="username" placeholder="Enter Username" name="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="password" class="mb-2">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="d-flex flex-row justify-content-center w-100">
            <button type="submit" class="btn btn-success my-2 w-50">Submit</button>
        </div>
    </form>
</section>
<script src="../static/js/validateForm.js"></script>