<% layout('./layouts/adminLayout') -%>

<link rel="stylesheet" href="../static/css/styleRegister.css">
<title>Admin Register</title>

<section id="registerIntroSection">
    <div class="d-flex flex-row justify-content-center w-100 mt-3">
        <% if(success && success.length){%>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%=success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%>
        <% if(error && error.length){%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%=error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%>
    </div>
    <div class="registerTitle">
        <h1>Register Admin</h1>
    </div>
    <form class="AdminRegisterForm col-xl-3 col-lg-4 col-md-6 col-sm-8 col-10 validated-form" action="/adminRegister"
        method="post" novalidate>
        <div class="form-group mb-3">
            <label for="username" class="mb-2">Email address</label>
            <input type="text" class="form-control" id="username" placeholder="Enter Username" name="username" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter valid E-mail.
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="password" class="mb-2">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
            <div class="invalid-feedback">
                Please enter valid Password.
            </div>
        </div>
        <div class="d-flex flex-row justify-content-center w-100">
            <button type="submit" class="btn btn-success my-2 w-50">Submit</button>
        </div>


    </form>
</section>
<script src="../static/js/validateForm.js"></script>