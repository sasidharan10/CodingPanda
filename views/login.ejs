<% layout('./layouts/boilerplate') -%>

<link rel="stylesheet" href="../static/css/styleLogin.css">
<title>Login</title>

<section id="loginIntroSection">
    <div class="d-flex flex-row justify-content-center w-100 mt-3">
        <% if(success && success.length){%>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%=success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%>
        <% if(error && error.length){%>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%=error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }%>
    </div>
    <div class="loginTitle">
        <h1>User Login</h1>
    </div>
    <form class="loginForm col-xl-3 col-lg-4 col-md-6 col-sm-8 col-10 validated-form" action="/login" method="POST"
        novalidate>
        <div class="form-group mb-3">
            <label for="email" class="mb-2">Email address</label>
            <input type="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email"
                name="email" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="password" class="mb-2">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
            <div class="valid-feedback">
                Looks good!
            </div>
        </div>
        <div class="d-flex flex-row justify-content-center w-100">
            <button type="submit" class="btn btn-success my-2 w-50">Submit</button>
        </div>
        <div class="redirectArea d-flex flex-row justify-content-center my-3">
            <p>Don't have an account? <a href="/register">Register</a></p>
        </div>
    </form>
</section>
<script src="../static/js/validateForm.js"></script>